<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question1bg"
    tools:context=".StarQuestionActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="335dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/center_"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/question1circle" />
            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/question1" />
            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/button_" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/progress2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>